<header>
  <nav>
    <ul id="lista">
      <li><a href="/products?limit=10&page=1" id="cartref">HOME üè†</a></li>
      <li><a href="/products?limit=10&page=1" id="back-to-products">Back to products</a></li>
    </ul>
  </nav>
</header>
<div>
  <form id="product-form">
    <h2>{{Head}}</h2><br />
    <div id="buttoner">
      <label for="code-input">Code</label>
      <input type="text" id="id-data" />
      <input type="hidden" id="owner" value="{{profile}}" />
      <input type="text" id="code-input" name="code" required />
      <button id="sercher-btn"
        onclick="SerchProduct(document.getElementById('code-input').value,document.getElementById('owner').value)"
        type="button">Search</button>
      <button id="deleter-btn" disabled
        onclick="delProduct(document.getElementById('id-data').value,document.getElementById('owner').value)"
        type="button">Delete</button>
      <button id="updater-btn" disabled onclick="updProduct(document.getElementById('owner').value)"
        type="button">Updater</button>

    </div>
    <div>
      <label for="title-input">Title</label>
      <input type="text" id="title-input" name="title" required />
    </div>
    <div>
      <label for="description-input">Description</label>
      <input type="text" id="description-input" name="description" required />
    </div>
    <div>
      <label for="category-select">Category</label>
      <select id="category-select" name="category" required>
        <option value="Category 1">Category 1</option>
        <option value="Category 2">Category 2</option>
        <option value="Category 3">Category 3</option>

      </select>
    </div>
    <div>
      <label for="stock-input">Stock</label>
      <input type="number" id="stock-input" name="stock" required />
    </div>
    <div>
      <label for="price-input">Price</label>
      <input type="number" id="price-input" name="price" required />
    </div>
    <div>
      <label for="thumbnail-input">Thumbnail URL</label>
      <hr />
      <input type="text" id="thumbnail-input" name="thumbnail" required />
    </div>

    <div id="buttsaver">
      <button type="submit" id="save">Save</button>
    </div>
  </form>
</div>

<script src="/public/js/newProduct.js" type="application/javascript"></script>